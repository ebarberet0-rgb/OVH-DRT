# =============================================================================
# YAMAHA DEMO RIDE TOUR - Environment Variables
# =============================================================================
# Copier ce fichier vers .env et remplir avec vos valeurs

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/yamaha_drt?schema=public"

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL="redis://localhost:6379"

# =============================================================================
# JWT
# =============================================================================
JWT_SECRET="changez-cette-clé-secrète-en-production-utilisez-une-longue-chaîne-aléatoire"
JWT_EXPIRES_IN="7d"

# =============================================================================
# API
# =============================================================================
NODE_ENV="development"
PORT=3001
API_URL="http://localhost:3001"

# =============================================================================
# FRONTEND URLs
# =============================================================================
WEB_URL="http://localhost:5173"
BACKOFFICE_URL="http://localhost:5174"
TABLET_URL="http://localhost:5175"
CORS_ORIGIN="http://localhost:5173,http://localhost:5174,http://localhost:5175"

# =============================================================================
# EMAIL (Nodemailer)
# =============================================================================
SMTP_HOST="smtp.example.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@example.com"
SMTP_PASS="your-password"
EMAIL_FROM="Yamaha Demo Ride Tour <noreply@yamaha-drt.fr>"

# =============================================================================
# SMS (Exemple avec Twilio)
# =============================================================================
SMS_PROVIDER="twilio"
TWILIO_ACCOUNT_SID="your-account-sid"
TWILIO_AUTH_TOKEN="your-auth-token"
TWILIO_PHONE_NUMBER="+33123456789"

# =============================================================================
# FILE UPLOADS
# =============================================================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_DIR="./uploads"

# Options: local, s3, etc.
STORAGE_PROVIDER="local"

# Si STORAGE_PROVIDER=s3
# AWS_ACCESS_KEY_ID="your-access-key"
# AWS_SECRET_ACCESS_KEY="your-secret-key"
# AWS_S3_BUCKET="yamaha-drt-uploads"
# AWS_S3_REGION="eu-west-3"

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL="info"

# =============================================================================
# ANALYTICS (optionnel)
# =============================================================================
# GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"
# SENTRY_DSN="https://xxx@sentry.io/xxx"
