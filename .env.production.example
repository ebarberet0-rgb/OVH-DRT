# =============================================================================
# YAMAHA DRT - Configuration Production OVH
# =============================================================================
# Copiez ce fichier vers .env et remplissez avec vos valeurs
# IMPORTANT: Ne jamais commiter le fichier .env!
# =============================================================================

# =============================================================================
# DOMAINE - IMPORTANT: Remplacez par votre domaine
# =============================================================================
DOMAIN=VOTRE_DOMAINE.com
ACME_EMAIL=admin@VOTRE_DOMAINE.com

# =============================================================================
# DATABASE
# =============================================================================
DB_USER=yamaha_user
# Générez un mot de passe fort: openssl rand -base64 32
DB_PASSWORD=CHANGEZ_CE_MOT_DE_PASSE_TRES_FORT
DB_NAME=yamaha_drt
DATABASE_URL=postgresql://yamaha_user:CHANGEZ_CE_MOT_DE_PASSE_TRES_FORT@postgres:5432/yamaha_drt?schema=public

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://redis:6379

# =============================================================================
# JWT - SECURITE
# =============================================================================
# Générez une clé secrète forte: openssl rand -base64 64
JWT_SECRET=GENEREZ_UNE_CLE_SECRETE_TRES_LONGUE_ET_ALEATOIRE_AVEC_OPENSSL
JWT_EXPIRES_IN=7d

# =============================================================================
# API
# =============================================================================
NODE_ENV=production
PORT=3001
API_URL=https://api.VOTRE_DOMAINE.com

# =============================================================================
# FRONTEND URLs
# =============================================================================
WEB_URL=https://www.VOTRE_DOMAINE.com
BACKOFFICE_URL=https://admin.VOTRE_DOMAINE.com
TABLET_URL=https://tablette.VOTRE_DOMAINE.com

# CORS - Liste des origines autorisées
CORS_ORIGIN=https://www.VOTRE_DOMAINE.com,https://admin.VOTRE_DOMAINE.com,https://tablette.VOTRE_DOMAINE.com

# =============================================================================
# EMAIL (SMTP)
# =============================================================================
# Exemple avec OVH Mail
SMTP_HOST=ssl0.ovh.net
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=noreply@VOTRE_DOMAINE.com
SMTP_PASS=VOTRE_MOT_DE_PASSE_SMTP
EMAIL_FROM=Yamaha Demo Ride Tour <noreply@VOTRE_DOMAINE.com>

# =============================================================================
# SMS (Twilio - optionnel)
# =============================================================================
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+33123456789

# =============================================================================
# FILE UPLOADS
# =============================================================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_DIR=/app/uploads
STORAGE_PROVIDER=local

# Pour S3 (optionnel, recommandé pour production)
# STORAGE_PROVIDER=s3
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_S3_BUCKET=yamaha-drt-uploads
# AWS_S3_REGION=eu-west-3

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info

# =============================================================================
# TRAEFIK DASHBOARD (optionnel)
# =============================================================================
# Générez avec: htpasswd -nb admin votre_mot_de_passe
# Puis doublez les $ dans le hash: $$ au lieu de $
TRAEFIK_AUTH=admin:$$apr1$$xyz$$hashedpassword

# =============================================================================
# ANALYTICS (optionnel)
# =============================================================================
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# SENTRY_DSN=https://xxx@sentry.io/xxx
